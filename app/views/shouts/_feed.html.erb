<% @shouts.each do | shout | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong> shout.user.name </strong><br />
                    <small> shout.user.username</small><br />
                    <p><%= shout.shout %></p>
                </div>
                    <nav class="level">
                        <div class="level-left is-mobile">
                            <%= link_to shout, class: "level-item" do %>
                                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                            <% end %>
                        <%= link_to edit_shout_path(shout), class: "level-item" do %>
                            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></span>
                        <% end %>
                        <%= link_to shout, method: :delete, data: { confirm: "Are you sure you want to delete this shoutout?" 
                        } do %>
                            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                        <% end %>
                    </div>
                </nav>
            </div>
        </article>
    </div>
<% end %>
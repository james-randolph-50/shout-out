<%= simple_form_for(@shout) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :shout, label: "Give a ShoutOut", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Give a shoutout...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>